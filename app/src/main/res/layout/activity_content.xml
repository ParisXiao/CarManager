<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    >
    <include
        android:id="@+id/content_top"
        layout="@layout/layout_toolbar_common"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/shape_dialog_bg"
            android:layout_below="@+id/content_top"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/content_title"
                android:gravity="center"
                android:text="信息标题"
                android:textSize="@dimen/texttitle_size"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/logon_line"
                />

            <!--<com.pda.carmanager.view.widght.JustifyTextView-->
                <!--android:id="@+id/text_content"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:textColor="@color/text_msgtime"-->
                <!--android:textSize="@dimen/text_size"-->
                <!--android:layout_marginTop="20dp"-->
                <!--/>-->
            <ProgressBar
                android:id="@+id/myProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>
        </LinearLayout>


</RelativeLayout>