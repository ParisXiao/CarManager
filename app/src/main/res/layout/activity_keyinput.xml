<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <include
        android:id="@+id/input_toolbar"
        layout="@layout/layout_toolbar_common" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/input_toolbar"
        android:id="@+id/linear_edit"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/edit_area1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/shape_edit" />

        <TextView
            android:id="@+id/edit_area2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/shape_edit" />


        <TextView
            android:id="@+id/edit_key1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/shape_edit" />

        <TextView
            android:id="@+id/edit_key2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/shape_edit" />

        <TextView
            android:id="@+id/edit_key3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/shape_edit" />

        <TextView
            android:id="@+id/edit_key4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/black"
            android:background="@drawable/shape_edit" />

        <TextView
            android:id="@+id/edit_key5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/black"
            android:background="@drawable/shape_edit" />

        <TextView
            android:id="@+id/edit_key6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/black"
            android:background="@drawable/shape_edit"
            android:visibility="gone" />


        <TextView
            android:id="@+id/text_stucar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="å­¦"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/text_bigSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/linear_edit"
        >

        <Button
            android:id="@+id/keyboard_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/theme_button_vip"
            android:text="@string/text_dialog_vip_com"
            android:textColor="@color/white"
            android:textSize="@dimen/texttitle_size" />
    </LinearLayout>
    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>