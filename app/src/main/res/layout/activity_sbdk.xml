<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/layout_toolbar_common"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        >
        <LinearLayout
            android:id="@+id/linear_sbdk_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_button_daka"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/daka_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_sbdk"
                android:textColor="@color/black"
                android:textSize="@dimen/texttitle_size"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/text_sbdk_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:23:22"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/texttitle_size"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTrace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </RelativeLayout>

</LinearLayout>