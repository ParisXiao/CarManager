<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/text_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017年12月8日"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text_msgtime"
        />
    <RelativeLayout
        android:id="@+id/rel_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_msg_item"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_itemtitle"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_msg_itemtitle"
                android:textSize="@dimen/texttitle_size"
                android:textColor="@color/black"
                android:text="消息标题"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_msg_itemmin"
                android:textSize="@dimen/texttitle_size"
                android:textColor="@color/black"
                android:text="12:00"
                android:layout_weight="1"
                android:gravity="right"
                    android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linear_itemtitle"
            android:background="@color/logon_line"
            android:layout_marginTop="10dp"
            android:id="@+id/line_item"
            />
        <TextView
            android:id="@+id/item_content"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/line_item"
            android:lines="3"
            android:textSize="@dimen/text_size"
            android:textColor="@color/text_msgtime"
            android:ellipsize="end"
            />
    </RelativeLayout>

</LinearLayout>