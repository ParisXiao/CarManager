<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_mypark_btn"
    android:background="@drawable/theme_button_griditem"
    >
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_bigcar"
        android:text="货车"
        android:gravity="center"
        android:textSize="@dimen/text_smallSize"
        android:textColor="@color/white"
        android:id="@+id/park_carType" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/park_carType"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/img_park"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kongxinchewei"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/park_carnum"
        android:text="贵A8977J"
        android:textColor="@color/park_blue"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/park_No"
        android:text="242"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="5dp"
        />



</LinearLayout>
</RelativeLayout>