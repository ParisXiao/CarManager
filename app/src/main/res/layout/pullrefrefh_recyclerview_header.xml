<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pullRefresh_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <RelativeLayout
            android:id="@+id/pullRefresh_reality_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ImageView-->
            <!--android:id="@+id/pullRefresh_arrow"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:background="@drawable/pull_refrrefh_header_default" />-->

            <ProgressBar
                android:id="@+id/pullRefresh_progressbar"
                style="@style/myProgressBarStyleUpdata"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />
            <!--
               android:ellipsize="end"
                        android:maxLines="2"-->
            <TextView
                android:id="@+id/pullRefresh_refresh_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pullRefresh_progressbar"
                android:layout_centerHorizontal="true"
                android:text="@string/text_updataing"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_msgtime"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/pullRefresh_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_refresh_down"
                android:textColor="@color/text_msgtime"
                android:visibility="gone"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>